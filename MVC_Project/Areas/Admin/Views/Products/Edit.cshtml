@model Product

<form asp-controller="Products" asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="id">

    <div class="mb-3">
        <label asp-for="name" class="form-label">Product Name</label>
        <input asp-for="name" class="form-control">
        <span class="text-danger" asp-validation-for="name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="price" class="form-label">Product Price</label>
        <input asp-for="price" class="form-control">
        <span class="text-danger" asp-validation-for="price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="description" class="form-label">Product Description</label>
        <input asp-for="description" class="form-control">
        <span class="text-danger" asp-validation-for="description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="rate" class="form-label">Product Rate</label>
        <input asp-for="rate" class="form-control">
        <span class="text-danger" asp-validation-for="rate"></span>
    </div>

    <div class="mb-3">
        <label asp-for="image" class="form-label">Product Image</label>
        @if(!string.IsNullOrEmpty(Model.image))
        {
            <div class="mb-2">
                <img src="~/images/@Model.image" class="img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
            </div>
        }
        <input type="file" asp-for="image" class="form-control">
        <span class="text-danger" asp-validation-for="image"></span>
        <small class="form-text text-muted">Leave empty to keep current image</small>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select class="form-select" asp-for="CategoryId">
            @foreach(var item in ViewBag.categories)
            {
                <option value="@item.id">@item.Name</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}