@model Product

<form asp-controller="Products" asp-action="ٍفخقث" method="post" >
    <div class="mb-3">
        <label for="productName" class="form-label">Product Name</label>
        <input asp-for="name" class="form-control" id="productName">
        <span class="text-danger" asp-validation-for="name"></span>
    </div>

    <div class="mb-3">
        <label for="productPrice" class="form-label">Product Price</label>
        <input asp-for="price" class="form-control" id="productPrice">
        <span class="text-danger" asp-validation-for="price"></span>
    </div>

    <div class="mb-3">
        <label for="productDescription" class="form-label">Product Description</label>
        <input asp-for="description" class="form-control" id="productDescription">
        <span class="text-danger" asp-validation-for="description"></span>
    </div>

    <div class="mb-3">
        <label for="productRate" class="form-label">Product Rate</label>
        <input asp-for="rate" class="form-control" id="productRate">
        <span class="text-danger" asp-validation-for="rate"></span>
    </div>

    <div class="mb-3">
        <label for="productImage" class="form-label">Product Image</label>
        <input type="file" asp-for="image" class="form-control" id="productImage">
        <span class="text-danger" asp-validation-for="image"></span>
    </div>

    <div class="mb-3">
        <label for="categoryId" class="form-label">Category Id</label>
        <input asp-for="CategoryId" class="form-control" id="categoryId">
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>