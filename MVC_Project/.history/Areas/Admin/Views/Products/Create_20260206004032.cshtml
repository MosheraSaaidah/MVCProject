@model Product

<form asp-Controller="Products" asp-action="Store" method="post" >
<div class="mb-3">

    <label for="exampleInputEmail1" class="form-label">Product Name</label>
  <input asp-for=name class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  <span class="text-danger" asp-validation-for=name></span>
    </div>


  <label for="exampleInputEmail1" class="form-label">Product Price</label>
  <input asp-for=price class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  <span class="text-danger" asp-validation-for=price></span>
    </div>

   
    <label for="exampleInputEmail1" class="form-label">Product Description</label>
  <input asp-for=description class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  <span class="text-danger" asp-validation-for=description></span>
    </div>



 <button class="btn btn-success">Create</button>
</form>